<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MAIN1"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Nevigation"
    tools:showIn="@layout/app_bar_nevigation">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Click the Register Button to send for any post in
                election:"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/tv1"
        android:textColor="#F20"
        android:textSize="15dp"
        />
    <Button
        android:id="@+id/btre"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="#031"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:text="Register"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For voting get code through notification or msg"
        android:textSize="20sp"
        android:gravity="center"
android:id="@+id/tv"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/code"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="voting"
        android:layout_gravity="center"
        android:id="@+id/btvot"/>

</LinearLayout>